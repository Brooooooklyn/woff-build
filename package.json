{
  "name": "@napi-rs/woff-build",
  "version": "0.2.0",
  "main": "index.js",
  "types": "index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Brooooooklyn/woff-build.git"
  },
  "napi": {
    "binaryName": "woff-build",
    "targets": [
      "x86_64-apple-darwin",
      "x86_64-pc-windows-msvc",
      "x86_64-unknown-linux-gnu",
      "aarch64-apple-darwin",
      "aarch64-linux-android",
      "aarch64-unknown-linux-gnu",
      "aarch64-unknown-linux-musl",
      "aarch64-pc-windows-msvc",
      "x86_64-unknown-linux-musl",
      "i686-pc-windows-msvc",
      "armv7-linux-androideabi",
      "wasm32-wasi-preview1-threads"
    ]
  },
  "license": "MIT",
  "devDependencies": {
    "@napi-rs/cli": "^3.0.0-alpha.38",
    "@napi-rs/wasm-runtime": "^0.2.0",
    "@yisibl/fontkit": "^2.0.2",
    "ava": "^6.1.1",
    "prettier": "^3.2.5"
  },
  "ava": {
    "timeout": "3m"
  },
  "engines": {
    "node": ">= 10"
  },
  "scripts": {
    "artifacts": "napi artifacts",
    "build": "napi build --platform --release",
    "build:debug": "napi build --platform",
    "prepublishOnly": "napi prepublish -t npm",
    "test": "ava",
    "version": "napi version && git add npm"
  },
  "files": [
    "index.js",
    "index.d.ts",
    "README.md"
  ],
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "always"
  },
  "packageManager": "yarn@4.2.1",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/Brooooooklyn"
  }
}
